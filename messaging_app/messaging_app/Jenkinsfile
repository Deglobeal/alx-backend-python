pipeline {
    agent any

    tools {
        python 'Python3'  // make sure Python is installed in Jenkins
    }

    environment {
        GITHUB_CREDENTIALS = credentials('github-creds')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Deglobeal/alx-backend-python',
                    credentialsId: 'github-creds'
            }
        }

        stage('Setup Python Env') {
            steps {
                script {
                    // Use ShiningPanda to create a virtualenv
                    def pythonEnv = python.withVirtualenv('venv') {
                        sh 'pip install --upgrade pip'
                        sh 'pip install -r messaging_app/requirements.txt'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    cd messaging_app
                    pytest --junitxml=pytest-report.xml
                '''
            }
            post {
                always {
                    junit 'messaging_app/pytest-report.xml'
                }
            }
        }
    }

    triggers {
        // manual trigger only, no SCM polling
    }
}
